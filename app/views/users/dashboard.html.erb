

<div class="dashboard-container dash-color">
  <h3 class="dashboard-title">Overview - <span class="dashboard-user"><%= @user.first_name%></span></h3>
  <div class="row">

    <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1" >
    </div>

    <div class="col-xs-12 col-sm-5 col-md-5 col-lg-5" >
      <div class="dashboard-left">
        <div class="dashboard-tutorials dashboard-section">
          <h5>Tutorials <%= link_to root_path, class: "btn btn-primary btn-circle" do%>
            <i class="fas fa-plus"></i>
            <% end %>
          </h5>

            <% @tutorials.each do |tutorial| %>
            <hr>
            <div class="tutorial-card">
              <div>
                 <%= tutorial.title %>
              </div>
              <%= link_to "View", company_tutorial_path(tutorial.company.id, tutorial.id), class: "btn btn-outline-primary button-size" %>
              <br>
              <br>
            </div>
            <% end %>

        </div>
      </div>
    </div>

    <div class="col-xs-12 col-sm-5 col-md-5 col-lg-5">
      <div class="dashboard-right">
        <div class="dashboard-tutorials-actions ">
          <h5>Views - </h5>
          <h5>Pending - </h5>
        </div>
        <div class="dashboard-staff dashboard-section">
          <h5>Team Members
            <% if @user.status == "manager" %>
            <%= link_to new_user_invitation_path(:user), class: "btn btn-primary btn-circle" do %>
            <i class="fas fa-plus"></i>
            <% end %>
            <% end %>
          </h5>
          <% @staff.each do |staff| %>
          <hr>
          <div class="team-card">

            <p><i class="far fa-user mute-50"></i><span> <%= staff.first_name.capitalize %> <%= staff.last_name.capitalize %></span> - <span class="mute-75"><%= staff.status.capitalize %></span>
              <% if @user.status == "manager" %>
              <% if staff.status == "staff" %>
              <div class="btn-group btn-group-toggle" data-toggle="buttons">
                <%= link_to "Upgrade", company_make_manager_path(@company.id, staff.id), method: :patch, class: "btn btn-outline-primary" %>
                <% if staff.id != @user.id && staff.status == "staff"%>
                <%= link_to "Delete", company_user_path(@company.id, staff.id), method: :delete, class: "btn btn-outline-primary" %>
              </div>
              <% end %>
              <% end %>
            <% end %>
            </div>
            <% end %>
          </p>
        </div>
      </div>
    </div>

    <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1" >
    </div>

  </div>

  <div class="row dash-color">
    <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1" >
    </div>

    <div class="col-xs-10 col-sm-10 col-md-10 col-lg-10" >
      <h5 class="help-desk">Help Desk </h5>
      <div class="dashboard-questions">

          <% @tutorials.each do |tutorial| %>
          <% if tutorial.questions.exists? && !tutorial.questions.pluck(:answered).all?  %>
          <% questions = tutorial.questions %>
          <% step_start_times = tutorial.steps.map {|step| step.start_time } %>
          <% questions.each do |question| %>
          <% if !question.answered %>
          <div class="card question-card" style="width: auto;">
            <div class="card-body">
              <h5 class="card-title"><%= tutorial.title %></h5>
              <h6 class="card-subtitle mb-2 text-muted">Step <%= "#{step_start_times.find_index(question.step.start_time) + 1}" %></h6>
              <p class="card-text"><%= question.content %> </p>
              <button type="button" data-value="<%= question.id %>" data-question="<%= question.content %>" class="btn btn-primary btn-circle" data-toggle="modal" data-target="#exampleModalCenter"><i class="fas fa-reply"></i></button>
              <%= link_to question_path(question.id), method: :delete, class: "btn btn-primary btn-circle" do %>
              <i class="fas fa-trash-alt"></i>
              <% end %>
            </div>
          </div>
          <% end %>
          <% end %>
          <% end %>
          <% end %>

      </div>
    </div>
    <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1" >
    </div>
  </div>


</div>


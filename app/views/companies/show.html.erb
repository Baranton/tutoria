<div class="company-show-banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://kitt.lewagon.com/placeholder/cities/berlin');">
</div>

<div class="id-container">
  <!-- Logo -->
  <img src="<%= @company.main_logo %>" alt="logo" class="logo-show">
  <!-- Company Name -->
  <h1><%= @company.name %></h1>
  <div>
    <!-- Video Creator Button -->
    <button type="button" class="btn btn-danger">Go to website</button>
  </div>
</div>

<div class="container">
  <h3>Uploads</h3>
  <div class="row">
    <% @company.tutorials.each do |tutorial| %>
    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-4">
      <div class="video-card" style="width: auto;">
        <iframe width="auto" height="215" src="<%= tutorial.file %>" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>

         <div class="card-body">
          <h5 class="card-title" href="#">
            <strong>
              <%= tutorial.title %>
            </strong>
          </h5>
          <p class="card-text"><%= tutorial.description.first(70) %>...</p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <hr>
</div>

